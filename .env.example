# Officials Portal Environment Variables
# Copy this file to .env.local for local development

# ===========================================
# SITE CONFIGURATION
# ===========================================

# Your production site URL
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Set to 'true' to use Supabase Storage
# Set to 'false' for localStorage (development only)
NEXT_PUBLIC_USE_SUPABASE=true

# ===========================================
# AUTHENTICATION
# ===========================================

# Set to 'true' to disable auth in development
NEXT_PUBLIC_DISABLE_AUTH_DEV=false

# ===========================================
# MICROSOFT GRAPH API (Email)
# ===========================================

# Get these from Azure AD App Registration
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# Sender email (must be configured in Microsoft 365)
EMAIL_SENDER=announcements@your-domain.com

# Category-specific email routing
EMAIL_GENERAL=secretary@your-domain.com
EMAIL_SCHEDULING=scheduler@your-domain.com
EMAIL_BILLING=treasurer@your-domain.com
EMAIL_MEMBERSHIP=memberservices@your-domain.com
EMAIL_EDUCATION=education@your-domain.com
EMAIL_WEBSITE=webmaster@your-domain.com
EMAIL_PERFORMANCE=performance@your-domain.com
EMAIL_RECRUITING=recruiting@your-domain.com
EMAIL_OTHER=secretary@your-domain.com

# ===========================================
# CMS CONFIGURATION
# ===========================================

# For production, use git-gateway
# For local development, use test-repo
NEXT_PUBLIC_CMS_BACKEND=git-gateway

# ===========================================
# OPTIONAL: SHAREPOINT INTEGRATION
# ===========================================

# For form submissions to Excel (optional)
SHAREPOINT_CLIENT_ID=your-sharepoint-client-id
SHAREPOINT_TENANT_ID=your-tenant-id
SHAREPOINT_CLIENT_SECRET=your-client-secret
SHAREPOINT_SITE_ID=your-site-id
SHAREPOINT_DRIVE_ID=your-drive-id
SHAREPOINT_WORKBOOK_ID=your-workbook-id

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
